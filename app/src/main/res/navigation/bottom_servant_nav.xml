        <argument
            android:name="servantId"
            app:argType="long"
            android:defaultValue="0L" />
        <argument
            android:name="regionServer"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/servantProfileFragment"
        android:name="com.caparepa.companionfou.ui.fragment.servant.ServantProfileFragment"
        android:label="fragment_servant_profile"
        tools:layout="@layout/fragment_servant_profile">
        <argument
            android:name="servantId"
            app:argType="long"
            android:defaultValue="0L" />
        <argument
            android:name="regionServer"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/servantAssetsFragment"
        android:name="com.caparepa.companionfou.ui.fragment.servant.ServantAssetsFragment"
        android:label="fragment_servant_assets"
