<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_servant_nav"
    app:startDestination="@id/servantSummaryFragment">

    <fragment
        android:id="@+id/servantSummaryFragment"
        android:name="com.caparepa.companionfou.ui.fragment.servant.ServantSummaryFragment"
        android:label="fragment_servant_summary"
        tools:layout="@layout/fragment_servant_summary">
        <argument
            android:name="servantId"
            app:argType="long"
            android:defaultValue="0L" />
        <argument
            android:name="regionServer"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/servantSkillsFragment"
        android:name="com.caparepa.companionfou.ui.fragment.servant.ServantSkillsFragment"
