<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    tools:context="com.caparepa.companionfou.ui.fragment.servant.ServantListFragment">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="SERVANT LIST!"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnServantsNa"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="NA Servants"
            app:layout_constraintEnd_toStartOf="@id/btnServantsJp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <Button
            android:id="@+id/btnServantsJp"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="JP Servants"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnServantsNa"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <ScrollView
            android:id="@+id/svServantList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="56dp"
            android:fillViewport="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnServantsNa">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvServantList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintVertical_bias="0"
                app:layout_constrainedHeight="true"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" />
        </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>