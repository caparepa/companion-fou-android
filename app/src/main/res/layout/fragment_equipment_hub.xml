<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.caparepa.companionfou.ui.fragment.equipment.EquipmentHubFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/tvPlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="EQUIPMENT HUB! HERE GOES STUFF!" />

        <Button
            android:id="@+id/btnCraftEssenceList"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="CE List"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPlaceholder"/>

        <Button
            android:id="@+id/btnCommandCodeList"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="CC List"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnCraftEssenceList"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>